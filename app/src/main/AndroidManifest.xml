<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.esibetter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".notifications.app"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo_brand"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".articles.Article_activity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_article_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".general.about_us" />
        <activity android:name=".general.HelpActivity" />
        <activity android:name=".general.User_Profile" />
        <activity
            android:name=".notifications.Profile_Activity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_profile_"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".general.SettingsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".signup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".general.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".notifications.FirebaseMessaging_Service">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo_brand" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />
    </application>

</manifest>