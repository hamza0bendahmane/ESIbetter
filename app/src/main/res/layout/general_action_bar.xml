<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/logo_brand" />

    <customfonts.MyEditText
        android:id="@+id/searchbarview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/looking_for_smthng"
        android:maxWidth="300dp"
        android:maxEms="15"
        android:maxLength="15"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:minWidth="200dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:onClick="openNotificationsLayout"

        >

        <ImageView
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_notifi"
            android:backgroundTint="@color/colorPrimary" />

        <customfonts.MyTextView
            android:id="@+id/number_of_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:background="@drawable/redcircle"
            android:gravity="center"
            android:maxEms="2"
            android:maxLength="2"
            android:maxLines="1"
            android:text="9"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:visibility="invisible"

            />

    </FrameLayout>
</RelativeLayout>