<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <customfonts.MyTextView
        android:id="@+id/CreateArticle"
        style="@style/viewParent.headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Create Article"
        android:textSize="30dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_below="@id/CreateArticle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:src="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CreateArticle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_subject_container"
        android:hint="Subject..."
        android:padding="12dp" />

    <ImageView
        android:id="@+id/AddPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="154dp"
        app:srcCompat="@drawable/ic_add_cover"
        tools:ignore="VectorDrawableCompat"
        android:layout_below="@id/photo"/>

    <ImageView
        android:id="@+id/italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddPicture"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/ic_italic_text"
         />

    <ImageView
        android:id="@+id/bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddPicture"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/italic"
        app:srcCompat="@drawable/ic_bold_text"

        />

    <ImageView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddPicture"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/bold"
        app:srcCompat="@drawable/ic_color_picker"
        />

    <ImageView
        android:id="@+id/orderHyrarchy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddPicture"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/color"
        app:srcCompat="@drawable/ic_order_hyrachy" />

    <ImageView
        android:id="@+id/orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddPicture"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/orderHyrarchy"
        app:srcCompat="@drawable/ic_order_number" />

    <RelativeLayout
        android:id="@+id/Body"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/italic"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_body_container">


        <customfonts.MyEditText
            android:id="@+id/addBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:hint="Add Body..."


            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="250dp"
           android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_add_pictures" />


    </RelativeLayout>

    <customfonts.MyTextView
        android:id="@+id/myTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Body"
        android:layout_alignParentStart="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_post_container"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Post"
        android:textColor="@color/browser_actions_bg_grey" />

    <customfonts.MyTextView
        android:id="@+id/myTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Body"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="127dp"
        android:background="@drawable/ic_cancel_container"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@color/browser_actions_bg_grey"
        android:layout_marginBottom="30dp"/>




</RelativeLayout>
</ScrollView>
