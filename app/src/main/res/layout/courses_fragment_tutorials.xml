<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center"
    android:gravity="top|center"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon_year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="3dp"
            app:srcCompat="@drawable/ic_one" />

        <TextView
            android:id="@+id/title_sub11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/icon_year1"
            android:gravity="center_vertical"
            android:text="st Year"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/title_sub11"
            android:tint="#faa419"
            app:srcCompat="@drawable/ic_goback_to" />

    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/first_year_recycler"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:scrollbars="horizontal"
        android:focusable="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="3dp"
            app:srcCompat="@drawable/ic_222" />

        <TextView
            android:id="@+id/title_sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/icon_year"
            android:gravity="center_vertical"
            android:text="nd Year"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/title_sub1"
            android:tint="#58842c"
            app:srcCompat="@drawable/ic_goback_to" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/second_year_recycler"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:scrollbars="horizontal"
        android:focusable="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        />


</LinearLayout>


<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fab_one"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
android:layout_marginBottom="40dp"
android:backgroundTint="@color/colorPrimary"
android:foregroundTint="#FAFAFAFA"
android:src="@android:drawable/ic_input_add"
app:backgroundTint="#FAFAFAFA"
android:layout_gravity="bottom|end" />
    </FrameLayout>



    </ScrollView>








