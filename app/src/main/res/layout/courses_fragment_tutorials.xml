<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center"
    android:gravity="center_vertical"
    android:padding="5dp"
    tools:context=".courses.Courses">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/click_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/icon_year1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="3dp"
                app:srcCompat="@drawable/ic_one" />

            <TextView
                android:id="@+id/title_sub11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="3dp"
                android:layout_toEndOf="@id/icon_year1"
                android:gravity="center_vertical"
                android:text="st Year"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon_to1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginHorizontal="10dp"
                android:layout_toEndOf="@id/title_sub11"
                android:tint="#faa419"
                app:srcCompat="@drawable/ic_goback_to" />

        </RelativeLayout>


        <Gallery
            android:id="@+id/first_year_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp" />

        <RelativeLayout
            android:id="@+id/click_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/icon_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="3dp"
                app:srcCompat="@drawable/ic_222" />

            <TextView
                android:id="@+id/title_sub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="3dp"
                android:layout_toEndOf="@id/icon_year"
                android:gravity="center_vertical"
                android:text="nd Year"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginHorizontal="10dp"
                android:layout_toEndOf="@id/title_sub1"
                android:tint="#58842c"
                app:srcCompat="@drawable/ic_goback_to" />

        </RelativeLayout>


        <Gallery
            android:id="@+id/second_year_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp" />


    </LinearLayout>
</ScrollView>








