<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical">

    <customfonts.MyEditText
        android:id="@+id/searchbarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/looking_for_smthng"
        android:maxEms="15"
        android:maxLength="15"
        android:maxLines="1"
        android:minWidth="200dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon_year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="3dp"
            app:srcCompat="@drawable/ic_one" />

        <customfonts.MyTextView
            android:id="@+id/title_sub11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/icon_year1"
            android:gravity="center_vertical"
            android:text="@string/st_year"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/title_sub11"
            android:tint="#faa419"
            app:srcCompat="@drawable/enter_to" />

        <customfonts.MyTextView
            android:id="@+id/title_mod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/img"
            android:gravity="center_vertical"
            android:text="@string/st_year"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_modules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:scrollbars="vertical"
        android:orientation="vertical" />


</LinearLayout>







