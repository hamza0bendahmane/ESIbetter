<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/comment_container"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    >
    <!--TODO : for Imen-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/picture_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="#000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picture_profile"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/bottom_navigation_background"
            android:orientation="vertical">

            <customfonts.MyTextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="18dp"
                android:gravity="left"
                android:fontFamily="sans-serif-black"
                android:text="the name of the user "
                android:textColor="@color/colorPrimary" />

            <customfonts.MyTextView

                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:text="Comment" />

        </LinearLayout> />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            >

            <customfonts.MyTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:lines="1"
                android:text="@string/time" />

            <ImageButton
                android:id="@+id/like_comm"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_thumb_up"
                android:backgroundTint="@color/nonSelected"
                android:layout_height="wrap_content" />

            <customfonts.MyTextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:text="@string/reply" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/comm_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/ic_not_on"
        android:padding="4dp"
        android:text="100"
        android:textColor="#FFF" />

</RelativeLayout>